{
  "name": "specql",
  "version": "0.1.0",
  "description": "CLI tool to generate database setups from OpenAPI specifications",
  "main": "dist/index.js",
  "bin": {
    "specql": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "gts lint",
    "lint:fix": "gts fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "gts check",
    "clean": "gts clean",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx http-server docs -p 8080 -o",
    "db:start": "./scripts/db.sh start",
    "db:start:postgres": "./scripts/db.sh start postgres",
    "db:start:mysql": "./scripts/db.sh start mysql",
    "db:start:mssql": "./scripts/db.sh start mssql",
    "db:start:sqlite": "./scripts/db.sh start sqlite",
    "db:stop": "./scripts/db.sh stop",
    "db:stop:postgres": "./scripts/db.sh stop postgres",
    "db:stop:mysql": "./scripts/db.sh stop mysql",
    "db:stop:mssql": "./scripts/db.sh stop mssql",
    "db:restart": "./scripts/db.sh restart",
    "db:logs": "./scripts/db.sh logs",
    "db:ps": "./scripts/db.sh ps",
    "db:clean": "./scripts/db.sh clean",
    "db:tools": "./scripts/db.sh tools",
    "db:health": "./scripts/db.sh health",
    "prepare": "npm run build"
  },
  "keywords": [
    "openapi",
    "database",
    "cli",
    "generator",
    "sql",
    "spec"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "figlet": "^1.8.1",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/boxen": "^2.1.0",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typedoc-material-theme": "^1.4.0",
    "typescript": "^5.3.3"
  }
}
